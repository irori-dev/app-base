
.border-b.px-4.py-2.flex.justify-between.items-center
  %h3.font-semibold.text-lg
    = header_text
  %button.text-black{ data: { action: "click->modal#close" }} &cross;
.p-3
  = form_with model: @cat, class: 'w-full', data: { action: 'turbo:submit-end->modal#successClose'}, class: 'space-y-4' do |f|
    .space-y-1
      = f.label :name, "名前", class: 'block text-sm font-medium text-gray-700'
      = f.text_field :name, class: 'block w-full border-gray-300 rounded px-2 py-1 placeholder:text-gray-300', placeholder: 'たろう'
    .space-y-1
      = f.label :age, "年齢", class: 'block text-sm font-medium text-gray-700'
      = f.number_field :age, class: 'block w-full border-gray-300 rounded px-2 py-1 placeholder:text-gray-300', placeholder: '3'
    = f.submit submit_text, class: 'block w-full bg-indigo-500 hover:bg-indigo-600 text-white px-4 py-2 rounded-md'