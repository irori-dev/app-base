- content_for :title, 'ユーザー一覧'
- content_for :description, 'ユーザー一覧'

.px-4.py-8.border-b-2.border-gray-100
  .flex.gap-4
    %h1.text-xl.font-bold
      ユーザー一覧
    %div{ "data-admin-id": current_admin.id }
      = Time.current.strftime('%Y年%m月%d日 %H:%M:%S')
    = form_with url: update_time_admins_users_path, method: :post, data: { turbo: false } do |f|
      = f.submit '現在時刻を更新', class: 'px-2 py-1 text-white bg-blue-500 rounded-lg hover:bg-blue-600'
  .flex.justify-between.items-end.pt-2
    = search_form_for @search, url: admins_users_path, method: :get, class: 'flex gap-4 items-end' do |f|
      .flex-none.w-80.space-y-1
        = f.label :email_cont, 'メールアドレス'
        = f.search_field :email_cont, class: 'input', placeholder: '田中 太郎'
      = f.submit '検索', class: 'px-2 py-1 text-white bg-blue-500 rounded-lg hover:bg-blue-600'
    = form_with url: insert_admins_users_path, method: :post, class: 'flex gap-4 items-end' do |f|
      .flex
        = f.number_field :count, class: 'input w-40 rounded-r-none', placeholder: '1'
        = f.label :count, '人', class: 'rounded-l-none rounded-lg bg-gray-300 border-l-none border border-gray-300 px-2 py-1'
      = f.submit '一括作成', class: 'px-2 py-1 text-white bg-blue-500 rounded-lg hover:bg-blue-600'
.flex.px-4.py-3.border-b-2.border-gray-100.gap-4
  .flex-none.w-10
    %p.font-bold
      ID
  .flex-1
    %p.font-bold
      メールアドレス
  .flex-none.w-40
    %p.font-bold
      作成日時
  .flex-none.w-16
= turbo_frame_tag "users-page-#{@users.current_page}" do
  = render Admins::UserCard::Component.with_collection(@users)
  = turbo_frame_tag "users-page-#{@users.next_page}", loading: :lazy, src: path_to_next_page(@users)
